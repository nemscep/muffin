<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Muffin" parent="Base.Theme.Muffin">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Error -->
        <item name="colorError">@color/red</item>
        <item name="colorOnError">@color/white</item>
        <!-- Background -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <!-- Surface -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
    </style>

    <style name="Base.Theme.Muffin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <!-- Other -->
        <item name="colorControlNormal">?colorOnPrimary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Toolbar -->
        <item name="toolbarStyle">@style/Widget.Muffin.Toolbar</item>
        <item name="materialCardViewStyle">@style/Widget.Muffin.MaterialCardView</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Muffin.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Muffin.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Muffin.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Muffin.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Muffin.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Muffin.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Muffin.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Muffin.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Muffin.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Muffin.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Muffin.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Muffin.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Muffin.Overline</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Muffin.LargeComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Muffin.MediumComponent
        </item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Muffin.SmallComponent
        </item>
    </style>
</resources>
